{
  "version": 2,
  "framework": "webpack",
  "buildCommand": "cd frontend && npm install --force && npm run build",
  "outputDirectory": "frontend/dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/frontend/dist/index.html"
    }
  ],
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python"
    }
  ],
  "env": {
    "VERCEL": "1",
    "NPM_FLAGS": "--force --no-audit --legacy-peer-deps"
  }
} 